@using TaskBoard.ViewModels
@model ProjectVM
@{
    ViewData["Title"] = "Create Project";
}
   <div>
        <h2 class="text-center mb-5">Create New Project</h2>
   </div>


<form asp-action="Create" asp-controller="ProjectController" method="post">
    <div class="row mb-3">
        <label class="col-sm-4 col-forn-label">Name new Project</label>
        <div class="col-sm-8">
            <input class="form-control" asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-4 col-forn-label">Description new Project</label>
        <div class="col-sm-8">
            <input class="form-control" asp-for="Description" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="offset-sm-4 col-sm-4 d-grid">
            <button type="submit" class="btn btn-primary" asp-controller="Project" asp-action="Create">Create</button>
        </div>
        <div class="col-sm-4 d-grid">
            <a class="btn btn-outline-primary" asp-controller="Home" asp-action="Index" role="button">Cancel</a>
        </div>
    </div>

</form>
