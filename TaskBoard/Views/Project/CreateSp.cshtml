@using TaskBoard.ViewModels 
@model SprintVM
@{
    ViewData["Title"] = "Create Sprint";
}
<div>
    <h2 class="text-center mb-5">Create New Sprint</h2>
</div>


<form asp-action="CreateSp" asp-controller="Project" method="post">
    <div class="row mb-3">
        <label class="col-sm-4 col-forn-label">Name new Sprint</label>
        <div class="col-sm-8">
            <input class="form-control" asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-4 col-forn-label">Description new Sprint</label>
        <div class="col-sm-8">
            <input class="form-control" asp-for="Description" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-4 col-forn-label">Start date new sprint</label>
        <div class="col-sm-8">
            <input class="form-control" asp-for="StartDate" type="date" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3"> 
        <label class="col-sm-4 col-forn-label">End date new sprint</label>
        <div class="col-sm-8">
            <input class="form-control" asp-for="EndDate" type="date" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-4 col-forn-label">Project new Sprint</label>
        <div class="col-sm-8">
            <input class="form-control" asp-for="ProjectName" />
            <span asp-validation-for="ProjectName" class="text-danger"></span>
        </div>
    </div>
    
    <div class="offset-sm-4 col-sm-4 d-grid">
        <button type="submit" class="btn btn-primary" asp-controller="Project" asp-action="CreateSp">Create</button>
    </div>
</form>